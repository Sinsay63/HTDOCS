            <div class="collapse navbar-collapse" id="navbarLinks">
                <div class="navbar-nav">
                    {% for navName in navNames %}
                        <a class="nav-link active" href="/{{navName}}"><span class="text">{{ navName | capitalize}}</span></a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </nav>
